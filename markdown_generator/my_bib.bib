@article{SNMSN2021,
  title = {A Hybrid \$ {{H}} {\textasciicircum}1{\textbackslash}times {{H}} ({\textbackslash}mathrm \{curl\})\$ Finite Element Formulation for a Relaxed Micromorphic Continuum Model of Antiplane Shear},
  author = {Sky, Adam and Neunteufel, Michael and M{\"u}nch, Ingo and Sch{\"o}berl, Joachim and Neff, Patrizio},
